# Configurazione MySQL ottimizzata per CRM
# Backup del file esistente e applicazione della nuova configurazione
# Versione aggiornata per supportare: clienti, utenti, task, chat, conto_termico, enea

[mysqld]
# InnoDB Settings - Memoria e Buffer (aumentati per le nuove tabelle)
innodb_buffer_pool_size = 1.5G
innodb_buffer_pool_instances = 8
innodb_log_file_size = 256M
innodb_log_buffer_size = 32M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1

# Query Cache (se supportato) - aumentato per più tabelle
query_cache_type = 1
query_cache_size = 128M
query_cache_limit = 4M

# Table Cache e Connection Settings - adattati per più tabelle
table_open_cache = 2000
table_definition_cache = 1000
max_connections = 150
thread_cache_size = 32

# Temporary Tables - aumentati per JOIN complessi tra tabelle
tmp_table_size = 128M
max_heap_table_size = 128M

# MyISAM Settings
key_buffer_size = 64M
myisam_sort_buffer_size = 16M

# Buffer Settings - ottimizzati per operazioni su più tabelle
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
join_buffer_size = 4M

# Timeouts
wait_timeout = 600
interactive_timeout = 600
net_read_timeout = 60
net_write_timeout = 60

# Logging - migliorato per debug
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1
log_queries_not_using_indexes = 1

# Binary Log
expire_logs_days = 14
max_binlog_size = 100M
sync_binlog = 1

# Security e Performance
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO
max_allowed_packet = 64M

# Full Text Search per ricerche nei campi di testo
ft_min_word_len = 3
ft_max_word_len = 84

# Ottimizzazioni specifiche per CRM
# Indici e cache ottimizzati per le operazioni frequenti:
# - Ricerca clienti per nome/cognome
# - Filtraggio task per data/stato
# - Cronologia chat per pratica
# - Ricerca conto termico per anno/cliente
# - Tracking documenti ENEA
